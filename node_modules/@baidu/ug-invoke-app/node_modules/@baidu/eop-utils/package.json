{
  "name": "@baidu/eop-utils",
  "version": "0.0.3",
  "description": "基于eop-box项目产出的通用函数库，服务于百度App用户增长研发团队运营活动，任何人均可贡献。",
  "main": "es/index.js",
  "sideEffects": false,
  "files": [
    "es",
    "lib",
    "src"
  ],
  "scripts": {
    "build": "npm run build:es && npm run build:lib",
    "build:es": "tsc --outDir es -d",
    "build:lib": "babel es -d lib",
    "clean": "rimraf es lib",
    "lint": "tslint -p .",
    "test": "npm run build && npm run test:unit",
    "test:unit": "istanbul cover _mocha",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "ssh://weijiaxun@icode.baidu.com:8235/baidu/jady/eop-utils"
  },
  "author": "weijiaxun",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.2",
    "@babel/core": "^7.0.0-rc.2",
    "@babel/preset-env": "^7.0.0-rc.2",
    "commitizen": "^2.10.1",
    "cz-customizable": "^5.2.0",
    "ghooks": "^2.0.4",
    "istanbul": "^0.4.5",
    "jsdom": "12.0.0",
    "jsdom-global": "3.0.2",
    "mocha": "^5.2.0",
    "mocha-jsdom": "^2.0.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "WIP",
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "opti",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "please input message info!",
      "helpMessage": "Commit message format error, you can use `npm run commit` to commit"
    },
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
